<div class="col-md-8 col-md-offset-2">
	<h2>All Matches (<%= @matches.count %>)
		<div class="pull-right">
			<%= link_to "Add New Match", new_match_path, {class: "btn btn-default"} %>
		</div>
	</h2>
	<div style="text-align: center;">
		<%= will_paginate @matches, renderer: BootstrapPagination::Rails, inner_window: 3 %>
	</div>
</div>
<div class="match-list col-md-6 col-md-offset-3">
	<% if @matches.any? %>
		<%= render 'shared/match_list', matches: @matches %>
	<% end %>
</div>
<div class="col-md-8 col-md-offset-2" style="text-align: center;">
	<%= will_paginate @matches, renderer: BootstrapPagination::Rails, inner_window: 3 %>
</div>
